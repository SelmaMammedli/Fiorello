@model IEnumerable<Slider>
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slider Table</h4>
                    <p class="card-description">
                        <a asp-controller="slider" asp-action="create" class="btn btn-outline-success">Create Slider</a>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Settings</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var slider in Model)
                                {
                                    <tr>
                                        <td>
                                            <img width="100" height="100" src="~/img/@slider.ImageUrl" alt=""/>
                                        </td>
                                       
                                        <td>
                                            <a asp-action="update" asp-route-id="@slider.Id" class="btn btn-outline-info"><i class="mdi mdi-auto-fix"></i></a>
                                            <a asp-action="delete" asp-route-id="@slider.Id" class="btn btn-outline-secondary"><i class="mdi mdi-close"></i></a>
                                            <a asp-action="detail" asp-route-id="@slider.Id" class="btn btn-outline-behance"><i class="mdi mdi-brightness-5"></i></a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
