@model IEnumerable<Product>
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Category Table</h4>
                    <p class="card-description">
                        <a asp-controller="product" asp-action="create" class="btn btn-outline-success">Create Product</a>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Category Name</th>
                                    <th>Settings</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td>@product.Name</td>
                                        <td>@product.Name</td>
                                        <td>@product.Name</td>
                                        
                                        <td>
                                            <a asp-action="update" asp-route-id="@product.Id" class="btn btn-outline-info"><i class="mdi mdi-auto-fix"></i></a>
                                            <a asp-action="delete" asp-route-id="@product.Id" class="btn btn-outline-secondary"><i class="mdi mdi-close"></i></a>
                                            <a asp-action="detail" asp-route-id="@product.Id" class="btn btn-outline-behance"><i class="mdi mdi-brightness-5"></i></a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
