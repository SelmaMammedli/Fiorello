@model Product
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p><b>Name:</b>  @Model.Name</p>
            <p>
                <b>Price:</b> @Model.Price

            </p>
            <p>
                <b>Category:</b> @Model.Category.Name

            </p>
            @foreach (var image in Model.ProductImages)
            {
                <img width="200" height="200" src="~/img/@image.ImageUrl" />
                @(image.IsMain ? Html.Raw("<i>Esas Photodur</i>") : Html.Raw($"<a class='btn btn-outline-success' href='/adminarea/product/setmainimage/{image.Id}'>Set Main Photo</a><br />"))
             @*   <a asp-action="setmain" asp-route-id="@image.Id" class="btn btn-outline-success">Set Main Photo</a>*@
            }<hr />
            <a class="btn btn-outline-dark" asp-action="index">Go Back</a>
           
        </div>
    </div>
</div>