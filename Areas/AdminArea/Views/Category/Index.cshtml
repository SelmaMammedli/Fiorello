@model IEnumerable<Category>
<div class="container"> 
    <div class="row">
        <div class="col-lg-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Category Table</h4>
                    <p class="card-description">
                        <a href="" class="btn btn-behance">Create Category</a>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th>Description</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var category in Model)
                                {
                                    <tr>
                                        <td>@category.Name</td>
                                        <td>@category.ShortDesc</td>
                                     
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>