@model IEnumerable<AppUser>
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">User Table</h4>
                    <p class="card-description">
                        <a asp-controller="user" asp-action="create" class="btn btn-outline-success">Create User</a><br /><br />
                        <form asp-action="index">
                            <input name="search" type="text" value="" /><button>Search</button>
                        </form>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>User Name</th>
                                    <th>FullName</th>
                                    <th>Email</th>
                                    <th>IsActive</th>
                                    <th>Settings</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>
                                            @user.UserName
                                        </td>
                                        <td>@user.FullName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            
                                                <span class="text-danger">blocked</span>
                                            


                                        </td>


                                        <td>
                                            <a asp-action="IsActive" asp-route-id="@user.Id" class="btn btn-outline-warning"><i class="mdi mdi-account-convert"></i></a>
                                            

                                            <a asp-action="update" asp-route-id="@user.Id" class="btn btn-outline-info"><i class="mdi mdi-auto-fix"></i></a>
                                            <a asp-action="delete" asp-route-id="@user.Id" class="btn btn-outline-secondary"><i class="mdi mdi-close"></i></a>
                                            <a asp-action="detail" asp-route-id="@user.Id" class="btn btn-outline-behance"><i class="mdi mdi-brightness-5"></i></a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
